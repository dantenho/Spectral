# Servidor
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=True

# InfluxDB
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your_influxdb_token_here
INFLUXDB_ORG=spectral
INFLUXDB_BUCKET=sensors

# PostgreSQL
POSTGRES_URL=postgresql://user:password@localhost:5432/spectral
POSTGRES_USER=spectral
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=spectral

# Storage
EVENT_STORAGE_DIR=../data/events
MODEL_STORAGE_DIR=../models

# Anomaly Detection
MAGNETIC_WINDOW_SIZE=100
MAGNETIC_SIGMA_MULTIPLIER=3.0
CORRELATION_TIME_WINDOW_MS=1000

# Machine Learning
BATCH_SIZE=16
NUM_EPOCHS=50
LEARNING_RATE=0.001
WEIGHT_DECAY=0.0001

# Weights & Biases
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=spectral
WANDB_ENTITY=your_username

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/spectral.log
